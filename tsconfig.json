{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ng-workspace05-nx/button": ["libs/button/src/index.ts"],
      "@ng-workspace05-nx/input": ["libs/input/src/index.ts"],
      "@ng-workspace05-nx/search": ["libs/search/src/index.ts"],
      "@ng-workspace05-nx/checkbox": ["libs/checkbox/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
